<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".instruction">

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="5.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/instruction"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#E02B57"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Read Before Use"
                android:fontFamily="@font/hindsiliguriregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:lineHeight="15dp"
                android:textSize="15dp"
                android:text="1) Click on start button to open contact dialer screen at set your 4 digit secure pin &amp; press hide place to go ahead. hide plce are suggesting by spot light."
                android:fontFamily="@font/hindsiliguriregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:lineHeight="15dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="2) After, set your 4 digit pin, you have to confirm it in next screen &amp; again press on hide place to go in your private place."
                android:fontFamily="@font/hindsiliguriregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:lineHeight="15dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:text="3) Now, manage your data! enjoy our security without worry!"
                android:fontFamily="@font/hindsiliguriregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center|bottom"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:padding="5dp"
                android:id="@+id/startnow"
                android:textColor="#ffffff"
                android:background="@color/mainpink"
                android:fontFamily="@font/hindsiliguriregular"
                android:text="Start Now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>