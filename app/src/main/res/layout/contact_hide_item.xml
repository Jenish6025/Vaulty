<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#E8505B"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_contact_unknown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_con_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#000" />

            <TextView
                android:id="@+id/txt_con_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/btn_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10.0dip"
                    android:contentDescription="Image"
                    android:src="@drawable/ic_message_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Message"
                    android:textSize="10.0sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_call"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:contentDescription="Image"
                    android:src="@drawable/ic_call_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textSize="10.0sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/chk_select_contact"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:checked="false" />

            <TextView
                android:id="@+id/txt_add_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/design_favorit_contact"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text="Add Private"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>