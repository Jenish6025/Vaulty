<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/onboarding3"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_weight="4"
                android:textSize="24dp"
                android:gravity="center|bottom"
                android:textColor="@color/mainpink"
                android:fontFamily="@font/hindsiliguriregular"
                android:text="Multiple Application Access"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="6"
                android:textSize="15dp"
                android:lineSpacingExtra="-7dp"
                android:gravity="center|top"
                android:textColor="#535252"
                android:fontFamily="@font/hindsiliguriregular"
                android:text="You can switch anything in other \n security app like Calculator, \n Gallery and Clock in Settings."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>